{% include 'rewrite-redirect-rules.j2' %}


server {
{% include 'sites-server-port.j2' %}

  root /home/{{ user_name }}/www/current/build;
  index index.html;

{% if auth_basic | default(false) %}
  auth_basic "Restricted";
  auth_basic_user_file {{ passwd_file_path }};
{% endif %}

  location / {
    try_files $uri @prerender;
  }

  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

  location /robots.txt {}

  location ~* \.(ico|js|css|gif|png|jpe?g|woff|ttf|svg|eot|otf|json|html)$ {
    expires 1y;
    log_not_found off;
    add_header 'Access-Control-Allow-Origin'      $http_origin;
    add_header 'Access-Control-Allow-Credentials' 'true';
    add_header 'Access-Control-Allow-Methods'     'GET, POST, OPTIONS';
    add_header 'Access-Control-Allow-Headers'     'DNT,X-Mx-ReqToken,Keep-Alive,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,X-Auth-Token';
  }

  location ~ ^/(assets|images|javascripts|stylesheets)/ {
    gzip_static on;
    expires     max;
    add_header  Cache-Control public;
    add_header  Pragma public;
    add_header  Last-Modified "";
    add_header  ETag "";

    break;
  }

  location @prerender {
    proxy_set_header X-Prerender-Token {{ prerender_token }};

    set $prerender 0;
    if ($http_user_agent ~* "baiduspider|twitterbot|facebookexternalhit|rogerbot|linkedinbot|embedly|quora link preview|showyoubot|outbrain|pinterest") {
        set $prerender 1;
    }
    if ($args ~ "_escaped_fragment_") {
        set $prerender 1;
    }
    if ($http_user_agent ~ "Prerender") {
        set $prerender 0;
    }
    if ($uri ~ "\.(js|css|xml|less|png|jpg|jpeg|gif|pdf|doc|txt|ico|rss|zip|mp3|rar|exe|wmv|doc|avi|ppt|mpg|mpeg|tif|wav|mov|psd|ai|xls|mp4|m4a|swf|dat|dmg|iso|flv|m4v|torrent)") {
      set $prerender 0;
    }

    if ($prerender = 1) {
        rewrite .* /$scheme://{{ webserver_name }}$request_uri? break;
        proxy_pass http://service.prerender.io;
    }
    if ($prerender = 0) {
        rewrite .* /index.html break;
    }
  }

  error_page  405 =200 $uri;
}
